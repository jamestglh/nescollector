@model UserCollectionViewModel


<h2>List Collection</h2>

<a class="btn btn-primary" asp-action="AddGame" role="button">Add a Game to your Collection</a>

@if (Model.UserGames.Count == 0)
{
    <div class=" alert alert-secondary">
        You don't have any games added to your collection yet!
    </div>

}
else
{
    <table class="table table-dark" >
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Includes Box?</th>
            <th>Includes Manual?</th>
            <th>Value</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Cover</th>


        </tr>
        @foreach (var u in Model.UserGames)
        {
            @foreach (var g in Model.Games)

            {
                if (u.GameId == g.Id)
                {
        <tr>
            <td>@g.Title</td>
            <td>@g.Genre</td>
            <td>@u.HasBox</td>
            <td>@u.HasManual</td>
            <td>$@u.Value.ToString("f2")</td>

            <td><a asp-action="Edit" asp-route-id="@u.Id">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@u.Id">Delete</a></td>


            <td>
                <img class="game-cover" src="@g.CoverURL" alt="Cover Art" />
            </td>

        </tr>
                }
            }
        }

    </table>
}