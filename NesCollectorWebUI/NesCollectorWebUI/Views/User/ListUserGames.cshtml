@model UserCollectionViewModel

    <div class="site-headline">
        <img src="~/img/siteimg/viewcollection.jpg" alt="Headline" id="bigtitle">
    </div>

    <a class="btn btn-primary" asp-action="AddGame" role="button">Add a Game to your Collection</a>
    <div class="card-container">
        @if (Model.UserGames.Count == 0)
        {
            <div class=" alert alert-secondary">
                You don't have any games added to your collection yet!
            </div>

        }
        else
        {

            <p>Your collection's total value is $@Model.TotalValue.ToString("f2")!</p>

            <div class="row">
                @foreach (var u in Model.UserGames)
                {
                    @foreach (var g in Model.Games)
                    {
                        if (u.GameId == g.Id)
                        {
                            <div class="card">
                                <img class="card-img-top" id="game-cover" src="@g.CoverURL" alt="Cover Art" />
                                <div class="card-body">
                                    <h5 class="card-title">@g.Title</h5>
                                    <p class="card-text">Genre: @g.Genre</p>
                                    @if (u.HasBox && u.HasManual)
                                    {
                                        <p class="card-text">Complete in box</p>
                                    }
                                    else if (u.HasBox && !u.HasManual)
                                    {
                                        <p class="card-text">Box and cart</p>
                                    }
                                    else if (!u.HasBox && u.HasManual)
                                    {
                                        <p class="card-text">Manual and cart only</p>
                                    }
                                    else
                                    {
                                        <p class="card-text">Cart only</p>
                                    }
                                    <p class="card-text">Current Market Value: $@u.Value.ToString("f2")</p>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@u.Id">Edit</a>
                                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@u.Id">Delete</a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>


