@model IEnumerable<Game>
@{
    ViewData["Title"] = "ListAllGames";
}

<div class="site-headline">
    <img src="~/img/siteimg/masterlistadmin.jpg" alt="Headline" id="bigtitle">
</div>

<div class="centeredbutton"><a class="btn btn-primary" asp-action="create" id="signupbtn" role="button">Add a Game to the Master List</a></div>


    <div class="card-container">
        <div class="row">
            @foreach (var g in Model)
            {

                <div class="card">
                    <img class="card-img-top" id="game-cover" src="@g.CoverURL" alt="Cover Art" />
                    <div class="card-body">
                        <h5 class="card-title">@g.Title</h5>
                        <p class="card-text">Genre: @g.Genre</p>
                        <p class="card-text">Loose Value: $@g.LoosePrice.ToString("f2")</p>
                        <p class="card-text">Complete in Box Value: $@g.CibPrice.ToString("f2")</p>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@g.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@g.Id">Delete</a>
                    </div>
                </div>

            }

        </div>
    </div>

