@model LogInViewModel

<div class="form-wrapper">
    <div class="text-center">

        <h2 class="" id="logintitle">Log In</h2>
        <form class="form-signin" asp-action="LogIn" method="post">
            <div asp-validation-summary="All"></div>
            <label class="sr-only" asp-for="Email"></label>
            <input class="form-control" asp-for="Email">

            <label class="sr-only" asp-for="Password"></label>
            <input class="form-control" asp-for="Password">

            <div class=" checkbox mb-3">

                <label asp-for="RememberMe">
                    <input type="checkbox" asp-for="RememberMe" /> Remember Me
                </label>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>

        </form>

    </div>
</div>
